# Application Environment
ENVIRONMENT=production
LOG_LEVEL=notice

# Security Settings
MASTER_PASSWORD=
JWT_SECRET=

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=url_shortener
POSTGRES_PORT=5433

# Service-specific credentials using Coolify's naming convention
# These will be auto-generated by Coolify if not provided
SERVICE_PASSWORD_DB=
SERVICE_PASSWORD_PGADMIN=

# Application Timeouts
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=25
POSTGRES_MAX_IDLE_CONNECTIONS=5
POSTGRES_CONN_MAX_LIFETIME=15m

# URL Shortener Settings
SHORTLINK_DEFAULT_EXPIRY=30d